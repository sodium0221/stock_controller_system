<% provide(:class_text, "product--new") %>
<% provide(:button_text, "完了") %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
      <h3 class="modal-title center"><%= @item.material_name %>の入荷入力フォーム</h3>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(scope: :product, url: new_item_product_path, local: true) do |f| %>
            
            <%= f.label :lot, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :lot, class: "form-control" %>
            
            <%= f.label :expire, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :expire, class: "form-control" %>
            
            <%= f.label :rog_amount, class: "label-#{yield(:class_text)}" %>
            <%= f.number_field :rog_amount, class: "form-control" %>
            
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
              <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-dismiss="modal">
                キャンセル
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>