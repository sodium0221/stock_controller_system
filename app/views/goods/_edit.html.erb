<% provide(:class_text, "goods--edit") %>
<% provide(:button_text, "登録") %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
      <h1 class="modal-title">製品情報編集</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @good, local: true) do |f| %>
            <%= render 'shared/error_messages', model: f.object %>
            
            <%= f.label :client_name, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :client_name, class: "form-control" %>
            
            <%= f.label :goods_name, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :goods_name, class: "form-control" %>
            
            <%= f.label :quantity, class: "label-#{yield(:class_text)}" %>
            <%= f.number_field :quantity, class: "form-control new_quantity_field", step: 5 %>
            
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
              <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-dismiss="modal">
                キャンセル
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>